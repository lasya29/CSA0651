#include <stdio.h>
#include <stdlib.h>

// Function to calculate the sum of digits of a number
int sumOfDigits(int num) {
    int sum = 0;
    while (num > 0) {
        sum += num % 10;
        num /= 10;
    }
    return sum;
}

// Function to find the maximum sum of two numbers with equal sum of digits
int maxSum(int* nums, int numsSize) {
    int maxSum = -1;
    for (int i = 0; i < numsSize; i++) {
        for (int j = i + 1; j < numsSize; j++) {
            if (sumOfDigits(nums[i]) == sumOfDigits(nums[j])) {
                int currentSum = nums[i] + nums[j];
                if (currentSum > maxSum) {
                    maxSum = currentSum;
                }
            }
        }
    }
    return maxSum;
}

int main() {
    int nums[] = {51, 71, 17, 42};
    int numsSize = sizeof(nums) / sizeof(nums[0]);
    int result = maxSum(nums, numsSize);
    printf("The maximum sum of two numbers with equal sum of digits is: %d\n", result);
    return 0;
}
