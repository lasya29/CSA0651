#include <stdio.h>
#include <stdbool.h>

// Function to check if a number is a perfect number
bool isPerfectNumber(int n) {
    if (n <= 0) {
        return false; // Perfect numbers are positive integers
    }

    int sum = 0;
    
    // Find divisors and calculate sum
    for (int i = 1; i < n; i++) {
        if (n % i == 0) {
            sum += i;
        }
    }

    // Check if sum of divisors equals n
    return sum == n;
}

int main() {
    int n;

    // Input from user
    printf("Enter a number to check if it is a perfect number: ");
    scanf("%d", &n);

    // Check if n is a perfect number
    if (isPerfectNumber(n)) {
        printf("%d is a perfect number.\n", n);
    } else {
        printf("%d is not a perfect number.\n", n);
    }

    return 0;
}
