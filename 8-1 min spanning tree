#include <stdio.h>
#include <string.h>

// Function to reverse a string
void reverseString(char str[]) {
    int n = strlen(str);  // Get the length of the string
    for (int i = 0; i < n / 2; i++) {
        // Swap the characters at positions i and n-i-1
        char temp = str[i];
        str[i] = str[n - i - 1];
        str[n - i - 1] = temp;
    }
}

int main() {
    char str[100];
    printf("Enter a string: ");
    gets(str);  // Read the input string

    reverseString(str);  // Reverse the string

    printf("Reversed string: %s\n", str);  // Print the reversed string

    return 0;
}
