#include <stdio.h>

// Function to check if a number is palindrome
int isPalindrome(int x) {
    if (x < 0)  // Negative numbers are not palindromes
        return 0;
    
    int original = x;
    int reversed = 0;
    
    while (x > 0) {
        reversed = reversed * 10 + x % 10;
        x /= 10;
    }
    
    return original == reversed;
}

// Main function to test the palindrome function
int main() {
    int num;
    printf("Enter a number: ");
    scanf("%d", &num);
    
    if (isPalindrome(num))
        printf("True\n");
    else
        printf("False\n");
    
    return 0;
}
