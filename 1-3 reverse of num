#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>

// Function to check if the input string is a valid integer
int isValidInteger(const char *str) {
    // Check for negative sign
    if (*str == '-') {
        str++;
    }
    // Check for digits
    while (*str) {
        if (!isdigit(*str)) {
            return 0; // Invalid input
        }
        str++;
    }
    return 1; // Valid input
}

// Function to reverse an integer
int reverseNumber(int num) {
    int reversed = 0;
    while (num != 0) {
        int digit = num % 10;
        reversed = reversed * 10 + digit;
        num /= 10;
    }
    return reversed;
}

int main() {
    // Test cases
    const char *test_cases[] = {"1234", "67894", "45a34"};
    int num_test_cases = sizeof(test_cases) / sizeof(test_cases[0]);
    
    for (int i = 0; i < num_test_cases; i++) {
        const char *input = test_cases[i];
        
        if (isValidInteger(input)) {
            int num = atoi(input);
            int reversed = reverseNumber(num);
            printf("Input: %s\nOutput: %d\n", input, reversed);
        } else {
            printf("Input: %s\nOutput: Illegal input\n", input);
        }
    }
    
    return 0;
}
