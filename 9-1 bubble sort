#include <stdio.h>
#include <time.h>

// Function to perform Bubble Sort
void bubbleSort(int arr[], int n) {
    int i, j, temp;
    for (i = 0; i < n-1; i++) {
        for (j = 0; j < n-i-1; j++) {
            if (arr[j] > arr[j+1]) {
                temp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = temp;
            }
        }
    }
}

// Function to print an array
void printArray(int arr[], int size) {
    int i;
    for (i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
}

int main() {
    int arr1[] = {10, 5, 80, -2, 15, 23, 45};
    int arr2[] = {12, 3, 0, 34, -11, 2, 8};
    int n1 = sizeof(arr1)/sizeof(arr1[0]);
    int n2 = sizeof(arr2)/sizeof(arr2[0]);

    // Bubble Sort for first array
    clock_t start1 = clock();
    bubbleSort(arr1, n1);
    clock_t end1 = clock();

    // Bubble Sort for second array
    clock_t start2 = clock();
    bubbleSort(arr2, n2);
    clock_t end2 = clock();

    // Printing the sorted arrays
    printf("Sorted array 1: ");
    printArray(arr1, n1);
    printf("Sorted array 2: ");
    printArray(arr2, n2);

    // Calculating and printing the time taken
    double time_taken1 = ((double)(end1 - start1))/CLOCKS_PER_SEC;
    double time_taken2 = ((double)(end2 - start2))/CLOCKS_PER_SEC;

    printf("Time taken for sorting array 1: %f seconds\n", time_taken1);
    printf("Time taken for sorting array 2: %f seconds\n", time_taken2);

    return 0;
}
