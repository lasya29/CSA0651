#include <stdio.h>
#include <math.h>

int isArmstrong(int num) {
    int originalNum, remainder, n = 0;
    double result = 0.0;

    originalNum = num;

    // Get the number of digits
    while (originalNum != 0) {
        originalNum /= 10;
        ++n;
    }

    originalNum = num;

    // Calculate the sum of the nth powers of its digits
    while (originalNum != 0) {
        remainder = originalNum % 10;
        result += pow(remainder, n);
        originalNum /= 10;
    }

    // Check if the result is equal to the number
    if ((int)result == num) {
        return 1;
    } else {
        return 0;
    }
}

int main() {
    int num1 = 153;
    int num2 = 419;

    if (isArmstrong(num1)) {
        printf("%d is an Armstrong number.\n", num1);
    } else {
        printf("%d is not an Armstrong number.\n", num1);
    }

    if (isArmstrong(num2)) {
        printf("%d is an Armstrong number.\n", num2);
    } else {
        printf("%d is not an Armstrong number.\n", num2);
    }

    return 0;
}
